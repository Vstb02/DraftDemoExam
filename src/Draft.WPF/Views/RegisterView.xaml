<UserControl x:Class="Draft.WPF.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Draft.WPF.Views"
             xmlns:components="clr-namespace:Draft.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <SolidColorBrush
            Color="White">
        </SolidColorBrush>
    </UserControl.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
            <ColumnDefinition Width="400px"></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="300px"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid Margin="10px">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center" FontSize="15px" FontFamily="Segoe Print" Grid.Row="0" Grid.Column="0">Email</TextBlock>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="15px" Grid.Row="0" Grid.Column="1"></TextBox>

                <TextBlock VerticalAlignment="Center" FontSize="15px" FontFamily="Segoe Print" Grid.Row="1" Grid.Column="0">Логин</TextBlock>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="15px" Grid.Row="1" Grid.Column="1"></TextBox>

                <TextBlock VerticalAlignment="Center" FontSize="15px" FontFamily="Segoe Print" Grid.Row="2" Grid.Column="0">Пароль</TextBlock>
                <components:BindablePasswordBox Password="{Binding Password}" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="15px" Grid.Row="2" Grid.Column="1">
                </components:BindablePasswordBox >

                <TextBlock VerticalAlignment="Center" FontSize="15px" FontFamily="Segoe Print" Grid.Row="3" Grid.Column="0">Пароль еще раз</TextBlock>
                <components:BindablePasswordBox Password="{Binding ConfirmPassword}" VerticalAlignment="Center" FontFamily="Segoe Print" FontSize="15px" Grid.Row="3" Grid.Column="1">
                </components:BindablePasswordBox>

                <Button Command="{Binding RegisterCommand}" Background="#FEA9AB" FontSize="15px" FontFamily="Segoe Print" Grid.ColumnSpan="2" Width="150px" Height="30" Grid.Row="4">Войти</Button>

                <Button Grid.Row="5" Grid.ColumnSpan="2"
                    Width="auto"
                    Command="{Binding ViewLoginCommand}"
                    BorderThickness="0"
                    Background="Transparent"
                    Content="Уже есть аккаунт?"
                    Foreground="Blue" />

                <TextBlock Grid.Row="6"
                    DataContext="{Binding ErrorMessageViewModel}"
                    Foreground="DarkRed"
                    Text="{Binding Message}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
